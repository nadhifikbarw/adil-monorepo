<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Adil" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cerulean</item>
        <item name="colorPrimaryVariant">@color/curious_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/safety_orange</item>
        <item name="colorSecondaryVariant">@color/burnt_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_logo</item>
    </style>

    <!-- Search Bar Styles -->

    <style name="FragmentContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="RegularText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="DescriptionText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="LinkText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="CategoryIconText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TabTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TagsText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="DetailTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="DetailSubTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dim_gray</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="DetailInfo">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ThinnerChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">20dp</item>
        <item name="chipMinHeight">10dp</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>